// TODO: Needs to be restructured to a one to many relationship rather than having organisation as a string

model Organisation {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  User          User[]
  Optimisations Optimisations[]
  Targets       Targets[]
}

model User {
  id             Int          @id @default(autoincrement())
  name           String
  email          String       @unique
  password       String
  role           String
  organisationID Int
  organisation   Organisation @relation(fields: [organisationID], references: [id])
}

model Optimisations {
  id             Int          @id @default(autoincrement())
  organisation   Organisation @relation(fields: [organisationID], references: [id])
  organisationID Int
  priority       String
  title          String
  body           String
  archived       Boolean
}

model Targets {
  id             Int           @id @default(autoincrement())
  organisation   String
  name           String
  value          Int
  timeframe      String
  Organisation   Organisation? @relation(fields: [organisationId], references: [id])
  organisationId Int?
}
