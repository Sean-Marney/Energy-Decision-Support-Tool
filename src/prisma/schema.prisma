model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String
  organisation Int
}

model Organisation {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Optimisations {
  id     Int     @id @default(autoincrement())
  organisation     Int
  priority     String 
  title     String 
  body     String    
  archived  Boolean     
}
model Targets {
  id     Int     @id @default(autoincrement())
  organisation     Int
  name     String 
  value     String 
  timeframe     String        
}