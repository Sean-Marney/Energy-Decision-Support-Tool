// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  //url      = env("DATABASE_URL")
  url      = "mysql://root:COMSC@localhost:3306/deorsum"
}

model Site {
  id             Int          @id @default(autoincrement())
  name           String
  organisationID Int
  organisation   Organisation @relation(fields: [organisationID], references: [id])
  Target         Target[]
}

model Organisation {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  User          User[]
  Optimisations Optimisation[]
  Targets       Target[]
  Site          Site[]
}

model User {
  id             Int          @id @default(autoincrement())
  name           String
  email          String       @unique
  password       String
  role           String
  organisationID Int
  organisation   Organisation @relation(fields: [organisationID], references: [id])
}

model Optimisation {
  id             Int          @id @default(autoincrement())
  organisation   Organisation @relation(fields: [organisationID], references: [id])
  organisationID Int
  priority       String
  title          String
  body           String
  archived       Boolean
}

model Target {
  id             Int           @id @default(autoincrement())
  title          String
  name           String
  value          Int
  timeframe      String
  Site           Site?         @relation(fields: [siteID], references: [id])
  siteID         Int?
  organisation   Organisation? @relation(fields: [organisationID], references: [id])
  organisationID Int?
}
