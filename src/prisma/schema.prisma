model Organisation {
  id      Int    @id @default(autoincrement())
  orgName String @unique
  // users   User[]
}

model User {
  id           Int    @id @default(autoincrement())
  email        String @unique
  password     String
  role         String
  organisation String
  // organisation   Organisation @relation(fields: [organisationId], references: [id])
